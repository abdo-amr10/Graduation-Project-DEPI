@model My_Uni_Hub.Models.Pages.UniversityAgenda

@{
    ViewData["Title"] = "Delete Event";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyUni Hub - Delete Event</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }

        .dashboard-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: rgba(255, 255, 255, 0.95);
            padding: 20px;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        }

        .sidebar-header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #667eea;
        }

        .sidebar-header h2 {
            color: #667eea;
            font-size: 24px;
            margin-bottom: 5px;
        }

        .sidebar-header p {
            color: #666;
            font-size: 12px;
        }

        .nav-menu {
            list-style: none;
        }

        .nav-item {
            margin-bottom: 10px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: #333;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .nav-link:hover, .nav-link.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .nav-link i {
            margin-right: 10px;
            width: 20px;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 30px;
            overflow-y: auto;
        }

        .page-header {
            background: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .page-header h1 {
            color: #f44336;
            font-size: 28px;
        }

        .page-header h1 i {
            margin-right: 10px;
        }

        .btn-back {
            background: #6c757d;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
        }

        .btn-back:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

        /* Delete Card */
        .delete-card {
            background: white;
            padding: 35px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            max-width: 700px;
            margin: 0 auto;
        }

        .warning-banner {
            background: linear-gradient(135deg, #ff6b6b 0%, #c92a2a 100%);
            color: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .warning-banner i {
            font-size: 40px;
        }

        .warning-text h3 {
            font-size: 20px;
            margin-bottom: 5px;
        }

        .warning-text p {
            font-size: 14px;
            opacity: 0.95;
        }

        .event-details {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 10px;
            border-left: 4px solid #f44336;
            margin-bottom: 30px;
        }

        .event-details h3 {
            color: #333;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #e0e0e0;
        }

        .detail-row {
            display: flex;
            align-items: start;
            margin-bottom: 15px;
            padding: 10px;
            background: white;
            border-radius: 8px;
        }

        .detail-label {
            font-weight: 600;
            color: #667eea;
            min-width: 150px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .detail-value {
            color: #333;
            flex: 1;
        }

        .event-type-badge {
            display: inline-block;
            padding: 6px 15px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
        }

        .type-exam {
            background: #ffe0e0;
            color: #c62828;
        }

        .type-quiz {
            background: #fff3e0;
            color: #ef6c00;
        }

        .type-assignment {
            background: #e3f2fd;
            color: #1565c0;
        }

        .type-event {
            background: #f3e5f5;
            color: #6a1b9a;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            padding-top: 20px;
            border-top: 2px solid #f0f0f0;
        }

        .btn-delete {
            background: linear-gradient(135deg, #f44336 0%, #c92a2a 100%);
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
        }

        .btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(244, 67, 54, 0.4);
        }

        .btn-cancel {
            background: #6c757d;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
        }

        .btn-cancel:hover {
            background: #5a6268;
        }

        @@media (max-width: 768px) {
            .dashboard-container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
            }

            .detail-row {
                flex-direction: column;
                gap: 5px;
            }

            .detail-label {
                min-width: auto;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn-delete,
            .btn-cancel {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>MyUni Hub</h2>
                <p>Admin Panel</p>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Dashboard")" class="nav-link">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Index", "AdminAgenda")" class="nav-link active">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Agenda</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-users"></i>
                        <span>Students</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-chalkboard-teacher"></i>
                        <span>Courses</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-graduation-cap"></i>
                        <span>Grades</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-cog"></i>
                        <span>Settings</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Logout", "Account")" class="nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Page Header -->
            <div class="page-header">
                <h1><i class="fas fa-trash-alt"></i> Delete Event</h1>
                <a href="@Url.Action("Index", "AdminAgenda")" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>

            <!-- Delete Card -->
            <div class="delete-card">
                <!-- Warning Banner -->
                <div class="warning-banner">
                    <i class="fas fa-exclamation-triangle"></i>
                    <div class="warning-text">
                        <h3>Warning: Permanent Action</h3>
                        <p>Are you sure you want to delete this event? This action cannot be undone.</p>
                    </div>
                </div>

                <!-- Event Details -->
                <div class="event-details">
                    <h3><i class="fas fa-info-circle"></i> Event Information</h3>
                    
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-hashtag"></i> Event ID:
                        </div>
                        <div class="detail-value">@Model.Id</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-heading"></i> Title:
                        </div>
                        <div class="detail-value"><strong>@Model.Title</strong></div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-align-left"></i> Description:
                        </div>
                        <div class="detail-value">@(Model.Description ?? "No description")</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-calendar-day"></i> Start Date:
                        </div>
                        <div class="detail-value">@Model.StartDate.ToString("dddd, MMMM dd, yyyy - hh:mm tt")</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-calendar-check"></i> End Date:
                        </div>
                        <div class="detail-value">@Model.EndDate.ToString("dddd, MMMM dd, yyyy - hh:mm tt")</div>
                    </div>

                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="fas fa-tag"></i> Type:
                        </div>
                        <div class="detail-value">
                            <span class="event-type-badge type-@Model.Type.ToLower()">
                                @Model.Type
                            </span>
                        </div>
                    </div>

                    @if (Model.FacultyId.HasValue)
                    {
                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-building"></i> Faculty ID:
                            </div>
                            <div class="detail-value">@Model.FacultyId</div>
                        </div>
                    }

                    @if (Model.DepartmentId.HasValue)
                    {
                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-sitemap"></i> Department ID:
                            </div>
                            <div class="detail-value">@Model.DepartmentId</div>
                        </div>
                    }

                    @if (Model.StudentId.HasValue)
                    {
                        <div class="detail-row">
                            <div class="detail-label">
                                <i class="fas fa-user-graduate"></i> Student ID:
                            </div>
                            <div class="detail-value">@Model.StudentId</div>
                        </div>
                    }
                </div>

                <!-- Delete Form -->
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-actions">
                        <button type="submit" class="btn-delete">
                            <i class="fas fa-trash-alt"></i> Yes, Delete Event
                        </button>
                        <a href="@Url.Action("Index", "AdminAgenda")" class="btn-cancel">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </main>
    </div>
</body>
</html>