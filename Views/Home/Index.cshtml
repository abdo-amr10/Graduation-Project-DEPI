                    <div class="deadline-alert">
                        <span>⚠️</span>
                        <span><strong>Deadline in 2 days</strong><br>project submission</span>
                    </div>
                </div>

                <!-- Opportunities -->
                <div class="opportunities-widget">
                    <h2 class="section-title">Opportunities</h2>
                    <div class="opportunity-item">
                        <div class="opp-icon bg-yellow">💼</div>
                        <div class="opp-content">
                            <h4>Summer Internship</h4>
                            <p>x12 Corp.</p>
