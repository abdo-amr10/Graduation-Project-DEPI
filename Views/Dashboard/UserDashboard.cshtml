@model My_Uni_Hub.Models.ViewModels.UserViewModel.DashboardViewModel
@* تأكد أن @model معرف في أعلى الملف *@
@using System.Linq
@{
    ViewBag.Title = "UserDashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyUni Hub</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
            min-height: 100vh;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 70px;
            background-color: #0b1a3d;
            border-radius: 0 25px 0 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 15px 0;
            box-shadow: 3px 0 10px rgba(0, 0, 0, 0.12);
            transition: width 300ms cubic-bezier(.2,.9,.2,1), box-shadow 220ms ease;
            transform-origin: left center;
            overflow: visible;
        }

            /* Expanded / hover state */
            .sidebar:hover,
            .sidebar.expanded {
                width: 230px;
                align-items: flex-start;
                padding-left: 18px;
                box-shadow: 10px 0 30px rgba(2,6,23,0.18);
            }

        /* Logo */
        .logo-section {
            margin-bottom: 35px;
        }

        .logo-img {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            object-fit: cover;
        }

        /* Navigation */
        .nav-menu {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
            flex-grow: 1;
            width: 100%;
            padding-top: 8px;
        }

        .bottom-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        /* 👇 القسم السفلي يفضل تحت */
        .bottom-menu {
            margin-top: auto; /* يخليهم تحت */
            margin-bottom: 30px; /* المسافة اللي ترفعهم فوق شوية */
            display: flex;
            flex-direction: column;
            gap: 15px;
            align-items: center;
        }


        /* Nav Item */
        .nav-item {
            color: #bfc8da;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 12px;
            width: 100%;
            padding: 8px 0;
            border-radius: 10px;
            box-sizing: border-box;
            justify-content: center; /* center icons when collapsed */
        }

        .sidebar.expanded .nav-item {
            justify-content: flex-start; /* align left when expanded */
            padding-left: 12px;
        }

        .nav-item i {
            width: 36px;
            text-align: center;
            font-size: 18px;
        }

        .nav-label {
            color: #bfc8da;
            font-size: 15px;
            white-space: nowrap;
            display: none; /* hide labels when collapsed */
            opacity: 0;
            transform: translateX(-6px);
            transition: opacity 0.2s ease, transform 0.2s ease;
        }

        .sidebar.expanded .nav-label,
        .sidebar:hover .nav-label {
            display: inline-block;
            opacity: 1;
            transform: translateX(0);
        }

        .nav-item.active,
        .nav-item:hover {
            color: #ff8c00; /* orange for active */
            background: rgba(255,140,0,0.06);
            transform: none;
        }


        .profile-img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            border: 3px solid white;
            margin-bottom: 0; /* شيل المسافة اللي كانت بتخليها تطلع فوق */
        }

        .profile-name {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .profile-major {
            font-size: 14px;
            opacity: 0.9;
        }


        /* Main Content */
        .main-content {
            margin-left: 75px; /* نفس عرض السايدبار */
            padding: 20px;
            width: calc(100% );
            background-color: #f9f9f9;
            min-height: 100vh;
            overflow-y: auto;
            transition: margin-left 0.25s ease;
        }

        /* When sidebar expands push content */
        .sidebar.expanded ~ .main-content,
        .sidebar:hover ~ .main-content {
            margin-left: 230px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        /* Header right group: search + icons */
        .header-right {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .search-wrapper {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .search-input {
            width: 360px;
            max-width: 45vw;
            padding: 10px 12px;
            border-radius: 12px;
            border: 1px solid rgba(10,35,70,0.08);
            background: linear-gradient(180deg,#fbfdff,#f3f8ff);
            color: #053160;
            box-shadow: 0 6px 18px rgba(10,35,70,0.04);
            font-size: 14px;
        }

            .search-input:focus {
                outline: none;
                box-shadow: 0 8px 28px rgba(13,50,100,0.06);
                border-color: rgba(59,130,246,0.18);
            }

        body.dark-mode .search-input {
            background: linear-gradient(180deg,#0f2746,#092134);
            color: #dbe9ff;
            border-color: rgba(255,255,255,0.04);
        }

        .welcome-text {
            font-size: 32px;
            font-weight: 600;
            color: #2c3e50;
        }

        .header-icons {
            display: flex;
            gap: 15px;
        }

        /* Improved header icon buttons (softer, blue-accented) */
        .icon-btn {
            width: 44px;
            height: 44px;
            border-radius: 12px;
            background: linear-gradient(180deg,#eaf4ff,#d6ebff);
            border: 1px solid rgba(59,130,246,0.12);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            color: #053160;
            box-shadow: 0 6px 18px rgba(10,35,70,0.06);
            transition: transform 160ms ease, background 160ms ease, color 160ms ease, box-shadow 160ms ease;
        }

            .icon-btn i {
                font-size: 18px;
                color: #053160
            }

            /* Clear-search (X) override: make the clear button icon red */
            #clearSearch, .icon-btn#clearSearch {
                color: #ef4444 !important;
            }

                #clearSearch i, .icon-btn#clearSearch i {
                    color: #ef4444 !important;
                }

                #clearSearch:hover {
                    background: rgba(239,68,68,0.08);
                }

            .icon-btn:hover {
                transform: translateY(-3px);
                background: linear-gradient(180deg,#d6ecff,#a9d1ff);
                box-shadow: 0 10px 30px rgba(13,50,100,0.08);
                color: #002143;
            }

            /* Variant: orange action button */
            .icon-btn.orange {
                background: linear-gradient(180deg,#fff4e6,#fff0de);
                border: 1px solid rgba(255,140,0,0.14);
                color: #b44b00;
            }

                .icon-btn.orange i {
                    color: #b44b00
                }

                .icon-btn.orange:hover {
                    background: linear-gradient(180deg,#ffd9b8,#ffc58a);
                    color: #7a2d00
                }

            /* Variant: navy/dark action (alternative) */
            .icon-btn.navy {
                background: linear-gradient(180deg,#e7f1ff,#d7e9ff);
                border: 1px solid rgba(10,40,80,0.08);
                color: #05203f;
            }

                .icon-btn.navy i {
                    color: #05203f
                }

                .icon-btn.navy:hover {
                    background: linear-gradient(180deg,#cfe6ff,#9fc8ff);
                    color: #021827
                }

        /* ensure header icons read well on dark bg */
        body.dark-mode .icon-btn {
            background: linear-gradient(180deg,#12304f,#09203a);
            color: #cfe6ff;
            border-color: rgba(255,255,255,0.04);
            box-shadow: 0 6px 18px rgba(0,0,0,0.2);
        }

        /* Dark toggle as round icon button (nicer visuals) */
        .dark-toggle {
            width: 44px;
            height: 44px;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: none;
            cursor: pointer;
            background: linear-gradient(180deg,#fff7ed,#fff1e6);
            color: #07304a;
            box-shadow: 0 6px 18px rgba(10,35,70,0.06);
            transition: transform 160ms ease, background 200ms ease, color 180ms ease;
        }

            .dark-toggle i {
                font-size: 18px
            }

            .dark-toggle:hover {
                transform: translateY(-3px);
            }

        body.dark-mode .dark-toggle {
            background: linear-gradient(180deg,#0f2746,#092134);
            color: #ffdca3;
            box-shadow: 0 10px 28px rgba(2,6,23,0.28);
        }
        /* gentle rotate on icon when toggling */
        .dark-toggle .fa-sun, .dark-toggle .fa-moon {
            transition: transform 260ms ease, opacity 180ms ease;
        }

        .dark-toggle.toggled .fa-sun {
            transform: rotate(15deg);
        }

        /* navy style for dark-toggle when we want it darker */
        .dark-toggle.navy {
            background: linear-gradient(180deg,#e8f2ff,#d8e9ff);
            color: #07264a
        }

            .dark-toggle.navy:hover {
                background: linear-gradient(180deg,#cfe6ff,#a3c6ff)
            }

        body.dark-mode .dark-toggle.navy {
            background: linear-gradient(180deg,#0b2b4a,#081f36);
            color: #ffdca3
        }

        .content-grid {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 30px;
        }

        /* Smart Feed */
        .smart-feed {
            background: white;
            border-radius: 18px;
            padding: 25px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
            margin-bottom: 25px;
        }

        .section-title {
            font-size: 20px;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        /* Section header row with optional actions */
        .section-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
            margin-bottom: 12px;
        }

        .see-all {
            background: transparent;
            border: none;
            color: var(--accent-2, #3b82f6);
            font-weight: 700;
            cursor: pointer;
            padding: 6px 10px;
            border-radius: 8px;
            transition: background 0.15s ease, transform 0.08s ease;
        }

            .see-all:hover {
                background: rgba(59,130,246,0.08);
                transform: translateY(-1px);
            }

        .feed-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
        }


        .feed-card {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 20px;
            border-radius: 14px;
            display: flex;
            gap: 15px;
            transition: all 0.3s;
            cursor: pointer;
        }

            .feed-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            }

        .feed-icon {
            font-size: 32px;
        }

        .feed-content h4 {
            font-size: 14px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .feed-content p {
            font-size: 12px;
            color: #7f8c8d;
        }
        /* Courses Grid */
        .courses-section {
            background: white;
            padding: 25px;
            border-radius: 20px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        }

        .courses-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .course-card {
            padding: 25px;
            border-radius: 15px;
            color: white;
            cursor: pointer;
            transition: transform 0.3s;
            position: relative;
            overflow: hidden;
        }

            .course-card:hover {
                transform: translateY(-5px);
            }

        .course-icon {
            width: 60px;
            height: 60px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            margin-bottom: 15px;
        }

        .course-name {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .course-prof {
            font-size: 14px;
            opacity: 0.9;
            margin-bottom: 15px;
        }

        .course-actions {
            display: flex;
            gap: 15px;
            margin-top: 15px;
        }

        .action-btn {
            padding: 8px 16px;
            background: rgba(255,255,255,0.2);
            border: none;
            border-radius: 8px;
            color: white;
            cursor: pointer;
            font-size: 13px;
            display: flex;
            align-items: center;
            gap: 6px;
            transition: background 0.2s;
        }

            .action-btn:hover {
                background: rgba(255,255,255,0.3);
            }

        /* Sidebar Right */
        .sidebar-right {
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        .calendar-widget, .opportunities-widget {
            background: white;
            padding: 25px;
            border-radius: 20px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        }

        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }

        /* Slightly smaller month label for compact widget */
        .calendar-month {
            font-size: 14px;
            font-weight: 600;
        }

        .calendar-nav {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 18px;
            color: #7f8c8d;
            padding: 4px 6px;
            border-radius: 8px;
        }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 6px;
            text-align: center;
        }

        /* container that will host day cells; display:contents so its children participate in parent grid */
        .calendar-days {
            display: contents;
        }

        .calendar-empty {
            visibility: hidden;
            height: 34px;
        }

        .calendar-day-header {
            font-size: 11px;
            font-weight: 700;
            color: #7f8c8d;
            padding: 6px 0;
        }

        .calendar-day {
            padding: 6px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 13px;
            min-height: 34px;
            transition: background 0.15s;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .calendar-day:hover {
                background: #f0f4fb;
            }

            .calendar-day.today {
                background: #2b6fb3;
                color: white;
            }

        /* make the whole calendar widget more compact */
        .calendar-widget {
            padding: 14px;
        }

        .deadline-alert {
            padding: 10px;
        }

        .deadline-alert {
            margin-top: 15px;
            padding: 15px;
            background: #fff9e6;
            border-left: 4px solid #ffc107;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .deadline-alert span {
                font-size: 14px;
                color: #856404;
            }

        .opportunity-item {
            padding: 13px;
            border-radius: 12px;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: transform 0.2s;
            cursor: pointer;
        }

            .opportunity-item:hover {
                transform: translateX(5px);
            }

        .opp-icon {
            width: 45px;
            height: 45px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        .opp-content h4 {
            font-size: 15px;
            color: #2c3e50;
            margin-bottom: 3px;
        }

        .opp-content p {
            font-size: 13px;
            color: #7f8c8d;
        }

        .user-actions {
            background: white;
            padding: 18px;
            border-radius: 14px;
            box-shadow: 0 8px 30px rgba(10,30,60,0.06);
            display: flex;
            flex-direction: column;
            gap: 8px;
            margin-top: auto; /* push to bottom of right column */
        }

            .user-actions button {
                border: none;
                padding: 12px 16px;
                width: 100%;
                border-radius: 12px;
                font-size: 15px;
                cursor: pointer;
                font-weight: 700;
                transition: all 0.18s ease;
            }

        .profile-btn {
            background: #e0e7ff;
            color: #1e40af;
        }

            .profile-btn:hover {
                background: #c7d2fe;
            }

        .logout-btn {
            background: linear-gradient(90deg,#07294a,#234a7a);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            box-shadow: 0 8px 22px rgba(2,30,60,0.18);
        }

            .logout-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 30px rgba(2,30,60,0.24);
            }


        /* Course Colors */
        /* Course Colors: unified blue → navy family, distinct gradients per course */
        /* stronger contrast, distinct hues */
        .course-1 {
            background: linear-gradient(135deg,#063055 0%,#3b7fb8 65%);
        }
        /* course-2: convert to light-navy family (was green/teal) */
        .course-2 {
            background: linear-gradient(135deg,#062c4f 0%,#2b67a6 65%);
        }
        /* replace purple accent with navy/indigo family */
        .course-3 {
            background: linear-gradient(135deg,#0a2748 0%,#3869b0 65%);
        }
        /* course-4: convert to light-navy family (was green/teal) */
        .course-4 {
            background: linear-gradient(135deg,#06315a 0%,#2b78b0 65%);
        }

        .course-5 {
            background: linear-gradient(135deg,#081b3f 0%,#5b7bd6 65%);
        }
        /* replace purple accent with deeper indigo/navy */
        .course-6 {
            background: linear-gradient(135deg,#0f2a4d 0%,#4760a3 65%);
        }

        /* stronger icon contrast */
        .course-icon {
            background: rgba(255,255,255,0.18);
            border: 1px solid rgba(255,255,255,0.08);
        }

        .action-btn {
            background: rgba(255,255,255,0.18);
        }

        .bg-yellow {
            background: #fff3cd;
        }
        /* neutralized purple -> soft navy/blue tint */
        .bg-purple {
            background: #e6eef9;
        }

        .bg-orange {
            background: #ffe5d0;
        }
        /* 🌙 Dark Mode Styles (updated) */
        body.dark-mode {
            background: linear-gradient(135deg, #070911 0%, #0e1320 100%);
            color: #dfe8f7;
        }

            /* Dark Mode Sidebar */
            body.dark-mode .sidebar {
                background: linear-gradient(180deg, #0f2240 0%, #162a4a 60%, #1b3358 100%);
                box-shadow: 10px 0 40px rgba(2,6,23,0.45);
            }

            /* Main content areas */
            body.dark-mode .main-content,
            body.dark-mode .smart-feed,
            body.dark-mode .courses-section,
            body.dark-mode .calendar-widget,
            body.dark-mode .opportunities-widget,
            body.dark-mode .user-actions {
                background: #121524;
                color: #dfe8f7;
                box-shadow: 0 6px 24px rgba(2,6,23,0.25);
            }

            /* Cards */
            body.dark-mode .feed-card {
                background: linear-gradient(135deg,#161825 0%, #1f2638 100%);
            }

            body.dark-mode .course-card {
                box-shadow: inset 0 -30px 80px rgba(0,0,0,0.15);
            }

            /* Titles and headings */
            body.dark-mode .section-title,
            body.dark-mode .feed-content h4,
            body.dark-mode .opp-content h4,
            body.dark-mode .welcome-text {
                color: #e8eefc;
            }

            /* icon buttons in dark */
            body.dark-mode .icon-btn {
                background: rgba(255,255,255,0.03);
                color: #dbe9ff;
            }

            /* Calendar */
            body.dark-mode .calendar-day:hover {
                background: #23263a;
            }

            body.dark-mode .calendar-day.today {
                background: #2d6fb3;
                color: #fff;
            }

            /* profile/logout buttons */
            body.dark-mode .profile-btn {
                background: #2a3a5a;
                color: #dbe9ff;
            }

            body.dark-mode .logout-btn {
                background: linear-gradient(90deg,#02172e,#183656);
                color: #dbe9ff;
            }

            /* user-actions */
            body.dark-mode .user-actions {
                background: #0f1724;
            }

        /* 🧑‍🎓 Profile Card */
        .profile-card {
            display: flex;
            align-items: center;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
            transition: 0.3s ease;
            padding: 20px 15px;
        }

            .profile-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 14px rgba(0, 0, 0, 0.12);
            }

        .profile-img {
            width: 65px;
            height: 65px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 14px;
            border: 2px solid #667eea;
        }

        .profile-info {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .profile-year {
            font-size: 13px;
            color: #556677;
            margin-top: 2px;
        }

        .profile-name {
            font-size: 16px;
            font-weight: 600;
            color: #222;
            margin-bottom: 3px;
        }

        .profile-college {
            font-size: 13px;
            color: #555;
            margin-bottom: 4px;
        }

        .profile-id {
            font-size: 13px;
            color: #556677;
            margin: 0 0 4px 0;
        }

        /* course-grade styles removed (badges deleted from HTML) */

        /* 🌙 Dark Mode (لو عندك زرار دارك مود بالفعل) */
        body.dark-mode .profile-card {
            background: #1e2738;
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.05);
        }

        body.dark-mode .profile-name {
            color: #e0e0e0;
        }

        body.dark-mode .profile-college,
        body.dark-mode .profile-id {
            color: #bbb;
        }

    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo-section">
                <img src="~/Images/logo.png" alt="MyUni Hub" class="logo-img">
            </div>

