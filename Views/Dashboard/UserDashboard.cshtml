            const a = document.createElement("a");
            a.href = href;
            const path = a.pathname.replace(/\/$/, "").toLowerCase();

            return current.startsWith(path);
        });
    }

    // لو وجدنا العنصر — فعّله
    if (matched) matched.classList.add("active");

})();
</script>

