    <!-- Post Announcement -->
    <a asp-area="Admin" asp-controller="Announcements" asp-action="Create" class="quick-action">
        <div class="quick-action-icon">📢</div>
        <div class="quick-action-text">Post Announcement</div>
    </a>
                        <div class="quick-action">
                            <div class="quick-action-icon">📊</div>
                            <div class="quick-action-text">View Reports</div>
                        </div>
                    </div>
                </div>

                <!-- Analytics Overview -->
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Analytics Overview</h2>
                        <a href="#" class="view-all">View All →</a>
                    </div>
                    <div class="analytics-grid">
                        <div class="analytics-item">
                            <div class="analytics-label">User Engagement</div>
                            <div class="analytics-value">78%</div>
                            <div class="analytics-bar-container">
                                <div class="analytics-bar blue" style="width: 78%;"></div>
                            </div>
                            <div class="analytics-percentage">↑ 5% from last week</div>
                        </div>
                        <div class="analytics-item">
                            <div class="analytics-label">Course Completion</div>
                            <div class="analytics-value">65%</div>
                            <div class="analytics-bar-container">
                                <div class="analytics-bar green" style="width: 65%;"></div>
                            </div>
                            <div class="analytics-percentage">↑ 8% from last week</div>
                        </div>
                        <div class="analytics-item">
                            <div class="analytics-label">Platform Uptime</div>
                            <div class="analytics-value">99.8%</div>
                            <div class="analytics-bar-container">
                                <div class="analytics-bar orange" style="width: 99.8%;"></div>
                            </div>
                            <div class="analytics-percentage">Excellent performance</div>
                        </div>
                        <div class="analytics-item">
                            <div class="analytics-label">Support Response</div>
                            <div class="analytics-value">92%</div>
                            <div class="analytics-bar-container">
                                <div class="analytics-bar red" style="width: 92%;"></div>
                            </div>
                            <div class="analytics-percentage">↑ 3% from last week</div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        (function(){
            const sidebar = document.getElementById('sidebar');
            const menuItems = document.querySelectorAll('.menu-item');

            // Restore active from localStorage
            const activeKey = localStorage.getItem('activeNav');
            if (activeKey) {
                menuItems.forEach(i => i.classList.toggle('active', i.dataset.key === activeKey));
            }

            // Click to set active, persist, and auto-collapse
            menuItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    // Remove active from all items
                    menuItems.forEach(i => i.classList.remove('active'));
                    
                    // Add active to clicked item
                    this.classList.add('active');
                    
                    // Save to localStorage
                    if (this.dataset.key) {
                        localStorage.setItem('activeNav', this.dataset.key);
                    }
                    
                    // Auto-collapse sidebar if it was expanded by click
                    if (sidebar.classList.contains('expanded')) {
                        sidebar.classList.remove('expanded');
                    }
                });
                
                // Keyboard accessibility
                item.tabIndex = 0;
                item.addEventListener('keypress', e => { 
                    if (e.key === 'Enter') item.click(); 
                });
            });

            // Hover expand (desktop)
            if (sidebar) {
                sidebar.addEventListener('mouseenter', () => sidebar.classList.add('expanded'));
                sidebar.addEventListener('mouseleave', () => sidebar.classList.remove('expanded'));
                
                // Click-toggle expand (mobile)
                sidebar.addEventListener('click', (e) => {
                    if (window.innerWidth <= 800) {
                        sidebar.classList.toggle('expanded');
                    }
                });
            }

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(event) {
                if (window.innerWidth <= 1024) {
                    if (!sidebar.contains(event.target) && sidebar.classList.contains('expanded')) {
                        sidebar.classList.remove('expanded');
                    }
                }
            });

            // Keyboard accessibility: Close sidebar with Escape key
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape') {
                    if (sidebar.classList.contains('expanded')) {
                        sidebar.classList.remove('expanded');
                    }
                }
            });
        })();
    </script>
</body>
</html>