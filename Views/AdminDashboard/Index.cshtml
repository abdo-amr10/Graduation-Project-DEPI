                    <div class="stat-number">@Model.TotalUsers</div>
                    <div class="stat-label">Total Users</div>
                    <div class="stat-change">↑ +123 this week</div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon blue">📚</div>
                    <div class="stat-number">@Model.ActiveCourses</div>
                    <div class="stat-label">Active Courses</div>
                    <div class="stat-change">↑ +5 new courses</div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon yellow">📄</div>
                    <div class="stat-number">@Model.UploadedFiles</div>
                    <div class="stat-label">Uploaded Files</div>
                    <div class="stat-change">↑ +45 today</div>
                </div>

                <div class="stat-card">
