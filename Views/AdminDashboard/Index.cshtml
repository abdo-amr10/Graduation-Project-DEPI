@{
    Layout = "_AdminLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - MyUniHub</title>
    <style>
/* =========================
   GLOBAL STYLES
========================= */
.dashboard-container {
    width: 100% !important;
    max-width: 100% !important;
    margin: 0 !important;
    padding: 0 !important;
}

.main-content {
    width: 100% !important;
    max-width: 100% !important;
    padding: 20px 20px !important;
    margin: 0 !important;
}

body, html {
    width: 100% !important;
    overflow-x: hidden;
}
body {
    background: #f4f6fb;
    margin: 0 !important;
    padding: 0 !important;
    font-family: 'Segoe UI', sans-serif;
}

/* ====== FIX: Full Width Layout (Remove Sidebar Gap) ====== */

.dashboard-container,
.main-content,
body {
    width: 100% !important;
    max-width: 100% !important;
    margin: 0 !important;
    padding: 0 !important;
}

.main-content {
    padding: 25px 30px !important;
}

/* =========================
   STATS GRID
========================= */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin: 25px 0;
}

.stat-card {
    background: #ffffff;
    border-radius: 20px;
    padding: 25px;
    box-shadow: 0 6px 16px rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.stat-card .stat-icon {
    font-size: 42px;
}

.stat-card .stat-number {
    font-size: 32px;
    font-weight: 700;
}

.stat-card .stat-label {
    font-size: 15px;
    color: #666;
}

.stat-card .stat-change {
    font-size: 14px;
    color: #1fa850;
    font-weight: 600;
}

/* Icon Colors */
.stat-icon.purple { color: #6f42c1; }
.stat-icon.blue { color: #007bff; }
.stat-icon.yellow { color: #ffc107; }
.stat-icon.red { color: #dc3545; }

/* =========================
   MAIN LAYOUT
========================= */
.main-layout {
    display: grid;
    grid-template-columns: 1.3fr 1fr;
    gap: 24px;
    margin-top: 20px;
}

/* =========================
   CARDS (UNIFIED STYLE)
========================= */
.card {
    background: #ffffff;
    border-radius: 20px;
    padding: 25px;
    box-shadow: 0 6px 16px rgba(0,0,0,0.08);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.card-title {
    font-size: 20px;
    font-weight: 700;
}

.view-all {
    color: #007bff;
    font-weight: 600;
    text-decoration: none;
}

/* =========================
   QUICK ACTIONS
========================= */
.quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 18px;
}

.quick-action {
    background: #fafafa;
    border-radius: 16px;
    border: 2px dashed #dcdcdc;
    text-align: center;
    padding: 22px 0;
    cursor: pointer;
    transition: .2s;
}

.quick-action:hover {
    background: #f2f2f2;
}

.quick-action-icon {
    font-size: 36px;
    margin-bottom: 10px;
}

/* =========================
   ANALYTICS
========================= */
.analytics-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 22px;
}

.analytics-item {
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.analytics-label {
    font-size: 14px;
    color: #555;
}

.analytics-value {
    font-size: 26px;
    font-weight: bold;
}

.analytics-bar-container {
    height: 8px;
    border-radius: 6px;
    background: #e2e2e2;
    overflow: hidden;
}

.analytics-bar {
    height: 100%;
    border-radius: 6px;
}

.analytics-bar.blue { background: #1d2d50; }
.analytics-bar.green { background: #1fa850; }
.analytics-bar.orange { background: #ff8c00; }
.analytics-bar.red { background: #dd3333; }

.analytics-percentage {
    font-size: 13px;
    color: #444;
}
        a.btn,
        a.btn:link,
        a.btn:visited,
        a.btn:hover,
        a.btn:active {
            text-decoration: none !important;
        }
        /* Remove underline from Quick Actions links */
        .quick-actions-grid a,
        .quick-actions-grid a:link,
        .quick-actions-grid a:visited,
        .quick-actions-grid a:hover,
        .quick-actions-grid a:active {
            text-decoration: none !important;
            color: inherit;
        }

    </style>
</head>
<body>
    <div class="dashboard-container">
       
        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <div class="header">
                <h1 class="header-title">Welcome to Admin Dashboard 👋</h1>
                <div class="header-actions">
                    <button class="btn btn-secondary">📊 Export Report</button>
                    <a href="@Url.Action("Create", "Announcements")" class="btn btn-primary">
                        ➕ New Announcement
