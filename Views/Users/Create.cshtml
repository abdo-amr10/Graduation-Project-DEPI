@using My_Uni_Hub.Models.Pages
@model Tuple<List<Department>, List<Faculty>>

@{
    ViewBag.Title = "Create Student";
    Layout = "_AdminLayout";
}

<div class="student-form-container">
    <div class="student-form-card">
        <div class="form-header">
            <h2>➕ Add New Student</h2>
        </div>

        <div class="form-body">
            @using (Html.BeginForm("Create", "Student", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Full Name <span class="required">*</span></label>
                    <input type="text" name="FullName" class="form-control" placeholder="Enter full name" required />
                </div>

                <div class="form-group">
                    <label>Email <span class="required">*</span></label>
                    <input type="email" name="Email" class="form-control" placeholder="Enter email address" required />
                </div>

                <div class="form-group">
                    <label>Password <span class="required">*</span></label>
                    <input type="password" name="Password" class="form-control" placeholder="Enter password" required />
                </div>

                <div class="form-group">
                    <label>Academic Year</label>
                    <input type="number" name="AcademicYear" class="form-control" placeholder="e.g. 3" />
                </div>

                <div class="form-group">
                    <label>Faculty</label>
                    <select name="FacultyId" class="form-control" required>
                        <option value="">-- Select Faculty --</option>
                        @foreach (var f in Model.Item2)
                        {
                            <option value="@f.Id">@f.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>Department</label>
                    <select name="DepartmentId" class="form-control">
                        <option value="">-- Select Department --</option>
                        @foreach (var d in Model.Item1)
                        {
                            <option value="@d.Id">@d.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>Join Date</label>
                    <input type="date" name="JoinDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>

                <div class="form-group checkbox-group">
                    <label>
                        <input type="checkbox" name="IsVerified" value="true" />
                        Verified
                    </label>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-save">✅ Save</button>
                    <a href="@Url.Action("Index", "Student")" class="btn-back">↩ Back</a>
                </div>
            }
        </div>
    </div>
</div>
