<div class="courses-grid" id="coursesGrid">
    @if (Model == null || !Model.Any())
    {
        <p>لم يتم العثور على كورسات مسجلة لديك.</p>
    }
    else
    {
        foreach (var course in Model)
        {
            // اختر المحاضر بناءً على الفهرس ثم زِد العدّاد
            var instructor = instructors.Length > 0 ? instructors[(idx++) % instructors.Length] : "Instructor";

            <div class="course-card" data-course="@course.Name" data-course-id="@course.Id">
                <div class="course-top">
                    <div class="course-accent" aria-hidden="true"></div>
                    <div class="course-info">
                        <h4>@Html.Encode(course.Name)</h4>
                        <p>@Html.Encode(instructor)</p>
                    </div>
                </div>

                <div class="course-body">
                    <div class="materials">
                        <h5>Materials</h5>

                        @if (course.Materials == null || !course.Materials.Any())
                        {
                            <p>No files uploaded yet</p>
                        }
                        else
                        {
                            foreach (var m in course.Materials.OrderByDescending(x => x.UploadDate))
                            {
                                <div class="material-item" style="display:flex;justify-content:space-between;align-items:center;padding:8px 0;">
                                    <div>
                                        <strong>@Html.Encode(m.Title)</strong><br />
                                        <small>@(string.IsNullOrWhiteSpace(m.Description) ? "-" : Html.Encode(m.Description)) • @m.UploadDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</small>
                                    </div>
                                    <div class="material-actions">
                                        <a class="btn open" href="@Url.Action("Download", "Course", new { id = m.Id })" target="_blank">Open</a>
                                        <a class="btn download" href="@Url.Action("Download", "Course", new { id = m.Id })" download>Download</a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

