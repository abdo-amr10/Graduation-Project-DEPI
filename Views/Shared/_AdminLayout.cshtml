@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/css/Admin/CreateAnnouncement.css" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="dashboard-container">

        <!-- ======= Sidebar (Shared across all pages) ======= -->
@{
    var currentPath = Context.Request.Path.Value?.ToLowerInvariant() ?? "";
    Func<string, bool> isActive = (routePrefix) =>
    {
        if (string.IsNullOrEmpty(routePrefix)) return false;
        return currentPath.StartsWith("/" + routePrefix.TrimStart('/').ToLowerInvariant());
    };
    Func<string, string> href = (r) => Url.Content("~/" + r.TrimStart('/'));
}
<aside class="sidebar" id="sidebar">

    <div class="logo-section">
        <a href="@href("admin/agenda")" class="logo-link" aria-label="Home">
            <img src="@(Url.Content("~/images/logo.png"))" class="logo-img" alt="MyUni Hub logo" />
        </a>
    </div>

    <!-- MAIN MENU -->
    <div class="menu-section">
        <div class="menu-title">MAIN MENU</div>
        <ul class="nav-menu">
<li class="menu-item @(isActive("admin/dashboard") ? "active" : "")" data-key="dashboard">
    <a href="@href("admin/dashboard")" class="menu-link">
        <span class="menu-item-icon">
            <!-- Dashboard Icon -->
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="7" height="7"></rect>
                <rect x="14" y="3" width="7" height="7"></rect>
                <rect x="14" y="14" width="7" height="7"></rect>
                <rect x="3" y="14" width="7" height="7"></rect>
            </svg>
        </span>
        <span class="menu-item-text">Dashboard</span>
    </a>
</li>



           <li class="menu-item @(isActive("admin/student") ? "active" : "")" data-key="users">
