@model My_Uni_Hub.Models.Pages.Course

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Add Course";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Admin/CreateCourse.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <main class="main-content">
        <div class="breadcrumb">
            <a href="@Url.Action("dashboard", "admin")">Dashboard</a> /
            <a href="@Url.Action("courses", "admin")">Courses</a> /
            Add Course
        </div>

        <div class="header">
            <h1 class="header-title">Add New Course</h1>
        </div>

        <div class="form-card">
            @* show model-level errors *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form asp-action="Create" asp-controller="Courses" asp-area="Admin" method="post" id="addCourseForm">
                @Html.AntiForgeryToken()

                <!-- Basic Information -->
                <div class="form-section">
                    <h2 class="section-title">Basic Information</h2>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Name">Course Name <span class="required">*</span></label>
                            <input asp-for="Name" class="form-control" id="courseName" placeholder="Enter course name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CourseCode">Course Code <span class="required">*</span></label>
                            <input asp-for="CourseCode" type="number" class="form-control" id="courseCode" placeholder="e.g., 301" />
                            <span class="help-text">Enter numeric course code only</span>
                            <span asp-validation-for="CourseCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label asp-for="Description">Description <span class="required">*</span></label>
                        <textarea asp-for="Description" id="description" placeholder="Enter course description"></textarea>
                        <span class="help-text">Provide a brief description of the course content and objectives</span>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- Academic Information -->
                <div class="form-section">
                    <h2 class="section-title">Academic Information</h2>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="FacultyId">Faculty</label>
                            <select asp-for="FacultyId" asp-items="(IEnumerable<SelectListItem>)ViewBag.Faculties">
                                <option value="">Select Faculty</option>
                            </select>
                            <span asp-validation-for="FacultyId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DepartmentId">Department</label>
                            <select asp-for="DepartmentId" asp-items="(IEnumerable<SelectListItem>)ViewBag.Departments">
                                <option value="">Select Department</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Semester">Semester <span class="required">*</span></label>
                            <select asp-for="Semester" class="form-control">
                                <option value="">Select Semester</option>
                                <option value="Fall">Fall</option>
                                <option value="Spring">Spring</option>
                                <option value="Summer">Summer</option>
                            </select>
                            <span asp-validation-for="Semester" class="text-danger"></span>
                        </div>

                        @* No Instructor field here because migration model doesn't contain Instructor *@
                        <div class="form-group">
                            <label>Optional: Additional Info</label>
                            <input type="text" name="Extra" placeholder="Optional (not saved)" class="form-control" />
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" onclick="window.history.back()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Course</button>
                </div>
            </form>
        </div>
    </main>
</div>

@section Scripts {
    <script src="~/js/Admin/CreateCourse.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}
