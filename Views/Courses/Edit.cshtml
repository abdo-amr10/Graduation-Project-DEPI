@using My_Uni_Hub.Models.ViewModels
@model EditCourseVM

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Course";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Admin/EditCourse.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <main class="main-content">
        <div class="breadcrumb">
            <a href="@Url.Action("dashboard", "admin")">Dashboard</a> /
            <a href="@Url.Action("cources", "admin")">Courses</a> /
            Edit Course
        </div>

        <div class="header">
            <h1 class="header-title">Edit Course</h1>
        </div>
       

        <div class="form-card">
            @if (TempData["EditCourseErrors"] != null)
            {
                <div class="alert alert-danger">@TempData["EditCourseErrors"]</div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>

            @* form posts to route edit/{id} so controller route attribute matches *@
            <form asp-action="Edit" asp-controller="Courses" asp-route-id="@Model.Id" method="post" id="editCourseForm">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />

                <!-- Basic Information -->
                <div class="form-section">
                    <h2 class="section-title">Basic Information</h2>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Name">Course Name <span class="required">*</span></label>
                            <input asp-for="Name" class="form-control" id="courseName" placeholder="Enter course name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CourseCode">Course Code <span class="required">*</span></label>
                            <input asp-for="CourseCode" type="number" class="form-control" id="courseCode" placeholder="e.g., 301" />
                            <span class="help-text">Enter numeric course code only</span>
                            <span asp-validation-for="CourseCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label asp-for="Description">Description <span class="required">*</span></label>
                        <textarea asp-for="Description" id="description" placeholder="Enter course description"></textarea>
                        <span class="help-text">Provide a brief description of the course content and objectives</span>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- Academic Information -->
                <div class="form-section">
                    <h2 class="section-title">Academic Information</h2>

                    <div class="form-row">
                        <!-- Faculty -->
                        <div class="form-group">
                            <label asp-for="FacultyId">Faculty</label>
                            <select asp-for="FacultyId" asp-items="(IEnumerable<SelectListItem>)ViewBag.Faculties" class="form-control">
                                @* لا تضف خيار بقيمة فارغة لو الحقل مطلوب *@
                            </select>
                            <span asp-validation-for="FacultyId" class="text-danger"></span>
                        </div>

                        <!-- Department -->
                        <div class="form-group">
                            <label asp-for="DepartmentId">Department</label>
                            <select asp-for="DepartmentId" asp-items="(IEnumerable<SelectListItem>)ViewBag.Departments" class="form-control">
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Semester">Semester <span class="required">*</span></label>
                            <select asp-for="Semester" class="form-control">
                                <option value="Fall">Fall</option>
                                <option value="Spring">Spring</option>
                                <option value="Summer">Summer</option>
                            </select>
                            <span asp-validation-for="Semester" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label>Optional: Additional Info</label>
                            <input type="text" name="Extra" placeholder="Optional (not saved)" class="form-control" />
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" onclick="window.history.back()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Course</button>
                </div>
            </form>
        </div>
    </main>
</div>

@section Scripts {
    <script src="~/js/Admin/EditCourse.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}
