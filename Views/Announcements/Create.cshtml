@model My_Uni_Hub.Models.Pages.Announcement

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Add Announcement";
}

<div class="breadcrumb">
    <a href="#">Dashboard</a> / Announcements / Add Announcement
</div>

<div class="header">
    <h1 class="header-title">Add New Announcement</h1>
</div>

<div class="form-card">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <!-- 🔴 عرض كل أخطاء الـ Validation -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-section">
            <h2 class="section-title">Announcement Details</h2>

            <!-- TITLE -->
            <div class="form-group">
                <label asp-for="Title">
                    Title <span class="required">*</span>
                </label>

                <input asp-for="Title"
                       class="form-control"
                       placeholder="Enter announcement title" />

                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- BODY -->
            <div class="form-group">
                <label asp-for="Body">
                    Announcement Body <span class="required">*</span>
                </label>

                <textarea asp-for="Body"
                          class="form-control"
                          rows="6"
                          placeholder="Write the announcement content here...">
                </textarea>

                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <!-- FACULTY -->
            <div class="form-group">
                <label asp-for="FacultyId">
                    Faculty <span class="required">*</span>
                </label>

                <select asp-for="FacultyId"
                        class="form-control"
                        asp-items="(IEnumerable<SelectListItem>)ViewBag.Faculties">
                </select>

                <span asp-validation-for="FacultyId" class="text-danger"></span>

                <span class="help-text">
                    Select which faculty this announcement is for
                </span>
            </div>
        </div>

        <div class="form-actions">
            <button type="button"
                    class="btn btn-secondary"
                    onclick="window.history.back()">
                Cancel
            </button>

            <button type="submit"
                    class="btn btn-primary">
                Create Announcement
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
