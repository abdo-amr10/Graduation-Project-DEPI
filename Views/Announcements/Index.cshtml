@model IEnumerable<My_Uni_Hub.Models.Pages.Announcement>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Manage Announcements";
}

<link rel="stylesheet" href="~/css/admin-announcements.css" />

<div class="dashboard-container">
    <main class="main-content">
        <div class="page-inner">

            <div class="page-header">
                <div>
                    <div class="breadcrumb">Dashboard / Announcements</div>
                    <h1>Manage Announcements</h1>
                </div>

                <a class="btn-add" href="@Url.Action("Create", "Announcements")">
                    + Add Announcement
                </a>
            </div>

            <div class="table-card">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Faculty</th>
                            <th>Posted</th>
                            <th class="actions-col">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="empty-row">
                                    No announcements found
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var a in Model)
                            {
                                <tr>
                                    <td class="title-cell">
                                        @a.Title

                                   
                                    </td>
                                    <td>
                                        <span class="badge">
                                            @(a.Faculty?.Name ?? "All Faculties")
                                        </span>
                                    </td>
                                    <td>@a.CreatedAt.ToString("yyyy-MM-dd")</td>
                                    <td class="actions-col">
                                        <a class="btn-edit"
                                           href="@Url.Action("Edit", "Announcements", new { id = a.Id })">
                                            Edit
                                        </a>

                                        <form asp-action="Delete"
                                              asp-route-id="@a.Id"
                                              method="post"
                                              style="display:inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn-delete"
                                                    onclick="return confirm('Delete this announcement?')">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </main>
</div>