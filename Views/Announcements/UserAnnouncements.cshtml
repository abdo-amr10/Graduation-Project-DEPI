        /* ===== CONTENT AREAS (cards / widgets / featured) ===== */
        .dark-mode .card,
        .dark-mode .widget,
        .dark-mode .featured,
        .dark-mode #modal > div {
            background: #0b1420 !important;
            color: #e6eef9 !important;
            box-shadow: 0 6px 20px rgba(0,0,0,0.55) !important;
            border-color: rgba(255,255,255,0.04) !important;
        }

        /* FORCE override for inline #fff backgrounds */
        .dark-mode *[style*="background:#fff"],
        .dark-mode *[style*="background: #fff"],
        .dark-mode *[style*="background-color:#fff"],
        .dark-mode *[style*="background-color: #fff"] {
            background: #0b1420 !important;
            color: #e6eef9 !important;
        }

        /* ===== RECENT ALERTS ===== */
        .dark-mode #recent > div,
        .dark-mode #recent > div[style] {
            background: #071221 !important;
            color: #d7e6f5 !important;
            box-shadow: 0 6px 18px rgba(0,0,0,0.55) !important;
        }

        /* ===== TEXT COLORS ===== */
        .dark-mode .page-title,
        .dark-mode .title {
            color: #e6eef9 !important;
        }

        .dark-mode .meta,
        .dark-mode .excerpt {
            color: #9aa7bc !important;
        }

        /* ===== INPUTS ===== */
        .dark-mode .search,
        .dark-mode select {
            background: rgba(255,255,255,0.03) !important;
            border: 1px solid rgba(255,255,255,0.06) !important;
            color: #e6eef9 !important;
