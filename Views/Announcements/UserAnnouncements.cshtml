        .dark-mode html,
        .dark-mode body {
            background: #070d16 !important;
            background-color: #070d16 !important;
            color: #e6eef9 !important;
        }

        /* remove default light gradient */
        .dark-mode body {
            background-image: none !important;
        }

        /* ===== SIDEBAR ===== */
        .dark-mode .sidebar {
            background: #07122a !important;
            box-shadow: 0 6px 24px rgba(0,0,0,0.7) !important;
        }

        .dark-mode .nav-item {
            color: #9fb6d6 !important;
        }

            /* Hover normal */
            .dark-mode .nav-item:hover {
                background: rgba(255,140,0,0.06) !important;
            }

            /* ACTIVE stays orange */
            .dark-mode .nav-item.active {
                color: #ff8c00 !important;
                background: rgba(255,140,0,0.14) !important;
                box-shadow: inset 0 -2px 0 rgba(255,140,0,0.12) !important;
